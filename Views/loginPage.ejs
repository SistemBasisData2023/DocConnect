  <script>
      function login(){
        $.ajax({
            url:"/views/doLogin",
            type:"post",
            data:$("#login-form").serialize(),
            success:function(res){
              console.log(res);
              const role = res.role;
              if(role === 'DOCTOR'){
                      window.location.href = '/views/doc';
                  } else if(role === 'PATIENT'){
                      window.location.href = '/views/user';
                  }
              localStorage.setItem("dataLogin", JSON.stringify(res.data));  
                return false;
            },
            error:function(xhr, status, error){
                
                console.log(error);
                return false;
            }
            
          });
        }

